<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight"></style>

    <style name="Widget.Theme.Vault.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Vault.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="user_button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/purple_200</item>
        <item name="android:paddingVertical">24dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="user_account_layout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="copy_button_style" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">10px</item>
        <item name="android:padding">24dp</item>
    </style>
    
    <style name="AppTheme.create_activity_theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="land_add_account_popup_et_style">
        <item name="android:layout_width">@dimen/popup_window_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/land_popup_vertical_margin</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>