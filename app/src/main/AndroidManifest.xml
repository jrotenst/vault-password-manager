<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vault">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vault">

        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/Theme.Vault.NoActionBar.SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.CreatePinActivity"
            android:label="@string/title_activity_create_pin"
            android:theme="@style/Theme.Vault.NoActionBar" />

        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Vault.Fullscreen" />

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Vault.NoActionBar"/>

        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.MainActivity">
        </activity>

        <activity
            android:name=".activities.AddNewAccountActivity"
            android:theme="@style/AppTheme.create_activity_theme" />

    </application>

</manifest>